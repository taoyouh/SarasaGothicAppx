<Page
    x:Class="SarasaGothic.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SarasaGothic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel x:Name="_rootPanel" Orientation="Vertical" Padding="12,6">
        <TextBlock Text="关于更纱黑体 Microsoft Store 版" Style="{ThemeResource TitleTextBlockStyle}"
            Margin="0,6" />
        <StackPanel Orientation="Horizontal" Margin="0,6">
            <TextBlock Text="应用版本" />
            <TextBlock x:Name="_appVersionBlock" Margin="12,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,6">
            <TextBlock Text="字体版本" />
            <TextBlock x:Name="_fontVersionBlock" Margin="12,0,0,0" />
        </StackPanel>
        <HyperlinkButton Margin="-6,0" Padding="6"
            Content="软件许可…" Click="LicensePageButton_Click" />
        <HyperlinkButton Margin="-6,0" Padding="6"
            Content="打分并评论…" NavigateUri="ms-windows-store://review/?ProductId=9MW0M424NCZ7" />
        <HyperlinkButton Margin="-6,0" Padding="6"
            Content="获取帮助…" NavigateUri="https://www.taoyouh.cn/apps/sarasa-gothic-appx/" />

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="_rootPanel.Padding" Value="24,6"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </StackPanel>
</Page>